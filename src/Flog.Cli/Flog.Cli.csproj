<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <OutputPath>$(OkExeOutputPath)</OutputPath>
    <AssemblyName>okflog</AssemblyName>
    <RootNamespace />
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <DefineConstants Condition="'$(Configuration)'=='Debug'">ENABLE_SCREEN_RECORDER</DefineConstants>

    <!-- single-file publish options -->

    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>

    <!--
    see Unity.Cli.csproj for single-file publish
    -->
  </PropertyGroup>

  <ItemGroup>
    <Using Include="NiceIO" />
    <Using Include="OkTools.Core" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="$(OkSrcRoot)Core\Core.csproj" />
    <ProjectReference Include="$(OkSrcRoot)Flog\Flog.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="docopt.net" />
    <PackageReference Include="DotNetConfig" />
    <PackageReference Include="PInvoke.Kernel32" />
    <PackageReference Include="System.Interactive" />
    <PackageReference Include="Vezel.Cathode" />
  </ItemGroup>

</Project>
